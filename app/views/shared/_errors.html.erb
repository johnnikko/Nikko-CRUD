<% if data.errors.any? %>
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h2 class="panel-title">
            <%= pluralize(data.errors.count, "error") %>
            prohibited this article from being save:
          </h2>
        </div>
        <div class="panel-body">
          <ul>
            <% data.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
<% end %>
