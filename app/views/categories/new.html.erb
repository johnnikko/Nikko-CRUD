<h1 align="center">Create new category</h1>
<div class="row">
  <div class = "col-md-4 col-md-offset-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title" align="center">Category</h3>
      </div>
      <div class="panel-body">
        <%= render 'shared/errors', data: @category %>
        <%= form_for(@category,:html => {class: "form-horizontal", role: "form" }) do |f| %>
          <div class="form-group">
            <%= f.label :name, class:"col-sm-3 control-label", for: "name" %>
            <div class="col-sm-9">
              <%= f.text_field :name, class: "form-control", type: "text", id: "name", placeholder: "Category name", autofocus: true %>
            </div>
          </div>
          <div class="pull-right">
            <%= f.submit "Save", class: "btn btn-primary" %>
            <%= link_to "Cancel", articles_path, class: "btn btn-default"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>