<h1 align="center">Listing All Categories</h1>
<div class="row">
  <div class="col-xs-12">
    <div align="center">
      <% @categories.each do |category| %>
        <ul class="listing">
          <div class="1row">
            <div class="well col-md-4 col-md-offset-4">
              <li class="article-title">
                <%= link_to "#{category.name}", category_path(category) %>
              </li>
            </div>
          </div>
        </ul>
      <% end %>
    </div>
  </div>
</div>
<div class="pull-right">
  <%= will_paginate %>
</div>