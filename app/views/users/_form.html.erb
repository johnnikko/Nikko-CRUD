<%= render 'shared/errors', data: @user %>
<div class="row">
  <div class = "col-md-4 col-md-offset-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title" align="center">Account</h3>
      </div>
      <div class="panel-body">
        <%= render 'shared/errors', data: @user %>
        <%= form_for(@user,:html => {class: "form-horizontal", role: "form" }) do |f| %>
          <div class="form-group">
            <%= f.label :username, class:"col-sm-3 control-label", for: "username" %>
            <div class="col-sm-9">
              <%= f.text_field :username, class: "form-control", type: "text", id: "username", placeholder: "Enter username", autofocus: true %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :email, class:"col-sm-3 control-label", for: "email" %>
            <div class="col-sm-9">
              <%= f.email_field :email, class: "form-control", id: "email", placeholder: "Enter email" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :password, class:"col-sm-3 control-label", for: "password" %>
            <div class="col-sm-9">
              <%= f.password_field :password, class: "form-control", id: "password", placeholder: "Enter password" %>
            </div>
          </div>
          <div class="pull-right">
            <%= f.submit(@user.new_record? ? "Signup" : "Update your account", class: "btn btn-primary")%>
            <%= link_to "Cancel", root_path, class: "btn btn-default"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>