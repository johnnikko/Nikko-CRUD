<%= render 'shared/errors', data: @article %>
<div class="row">
  <div class = "col-xs-12">
    <%= form_for(@article,:html => {class: "form-horizontal", role: "form" }) do |f| %>
      <div class="form-group">
        <%= f.label :Title, class:"col-sm-2 control-label", for: "title" %>
        <div class="col-sm-10">
          <%= f.text_field :title, class: "form-control", type: "text", id: "title", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :Description, class:"col-sm-2 control-label", for: "desc" %>
        <div class="col-sm-10">
          <%= f.text_area :description, class: "form-control", type: "text", id: "desc", placeholder: "Type here..", rows: "7" %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-10 col-sm-offset-2">
          <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
            <% cb.label(class: "checkbox-inline input_checkbox"){cb.check_box(class: "checkbox") + cb.text} %>
          <% end %>
        </div>
      </div>
      <div class="pull-right">
        <%= f.submit class: "btn btn-primary"%>
        <%= link_to "Back", root_path, class: "btn btn-default"%>
      </div>
    <% end %>
  </div>
</div>
